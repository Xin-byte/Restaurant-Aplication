<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    Registrar Platos
                </div>
                <div class="card-body">
                    <form action="/dishRegister" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Nombre</label>
                            <input type="text" class="form-control " id="dni" value="{{edit.dni}}" name="descrip"
                                placeholder="" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Precio</label>
                            <input type="number" class="form-control " value="{{edit.nombre}}" id="nombre" name="prec"
                                placeholder="" required min="0" step="any">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Especialidad</label>
                            <select class="form-control" name="espe" id="">
                                {{#each specialties}}
                                    <option value="{{idEspecialidad}}">{{nomespecialidad}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Tipo de Plato</label>
                            <select class="form-control" name="tipo" id="">
                                {{#each typeDish}}
                                    <option value="{{idtipoPlato}}">{{nom_tipoplato}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="photo py-4">
                            <label for="foto">Foto</label>
                            <div class="prevPhoto">
                                <span class="delPhoto">X</span>
                                <label for="foto"></label>
                                <img id="img" src="/uploads/default.png">
                            </div>
                            <div class="upimg">
                                <input type="file" name="img" id="foto" accept="image/png, .jpeg, .jpg, image/gif">
                            </div>
                            <div id="form_alert"></div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info">
                                Registrar <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-xl-8 col-md-6 mb-4">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Platos
                        <div class="">
                            <a type="button shadow-lg" class="btn btn-success" href="">
                                <i class="fas fa-file-excel"></i>
                            </a>
                            <a type="button shadow-lg" class="btn btn-danger" href="">
                                <i class="fas fa-file-pdf"></i>
                            </a>
                        </div>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="mytable" class="table table-bordered table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Foto</th>
                                    <th>Plato</th>
                                    <th>Precio</th>
                                    <th>Tipo</th>
                                    <th>Especialides</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each dish}}
                                <tr>
                                    <td>
                                        <img src="/uploads/{{foto}}" class="rounded-circle" alt="..." width="75px" height="75px">
                                    </td>
                                    <td> {{PLATO}} </td>
                                    <td> {{PRECIO}} {{apellido}} </td>
                                    <td> {{TIPO}} </td>
                                    <td> {{ESPECIALIDAD}} </td>
                                    <td>
                                        <div class="d-flex align-items-center justify-content-center">
                                            <a href="/editDish/{{ID}}" class="btn btn-secondary m-1">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a href="/deleteDish/{{ID}}" class="btn btn-danger m-1">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>