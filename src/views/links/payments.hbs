<div class="container p-4">
    <div class="row">
        <div class="col-md-5 m-auto">
            <div class="card">
                <div class="card-header">
                    Confirmar Pago
                </div>
                <div class="card-body">
                    <form action="/payments" method="POST">
                        <input type="text" name="idresr" value="{{id}}" hidden>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Monto</label>
                            <input type="number" class="form-control " id="usuc" name="usuario" placeholder="" required step="any">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Typo de pago</label>
                            <div class="form-group">
                                <select class="form-control" name="typep" id="">
                                    <option selected>Seleccione el tipo de pago</option>
                                    {{#each types}}
                                    <option value="{{idtipopago}}">{{nomTipoPago}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-info">
                                Actualizar
                            </button>
                            <a href="/clients" class="btn btn-warning text-white">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>